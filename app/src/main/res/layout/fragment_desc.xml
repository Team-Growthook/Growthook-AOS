<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray600">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_desc_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_desc_indicator"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp_desc_explain"
        app:tabBackground="@drawable/sel_onboarding_indicator"
        app:tabGravity="center"
        app:tabMinWidth="0dp"
        app:tabIndicatorHeight="0dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_desc_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@drawable/rect_radius_5"
        android:enabled="false"
        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="시작하기"
        android:textAppearance="@style/body1_bold"
        android:textColor="@color/sel_text"
        app:backgroundTint="@color/sel_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>