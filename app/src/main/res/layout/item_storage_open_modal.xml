<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_gray400_fill_2">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_storage_modal_text"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_storage_modal_title"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="내 동굴에 친구를 초대해\n인사이트를 공유해요!"
            android:textAppearance="@style/head4"
            android:textColor="@color/White000"
            android:includeFontPadding="false"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/layout_storage_modal_text"
            app:layout_constraintEnd_toEndOf="@id/layout_storage_modal_text"/>

        <TextView
            android:id="@+id/tv_storage_modal_content"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="해당 기능은 추후 업데이트 예정이에요 :)"
            android:textAppearance="@style/body3_reg"
            android:textColor="@color/Gray100"
            android:includeFontPadding="false"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_storage_modal_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_storage_modal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray300"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@id/layout_storage_modal_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/layout_storage_modal_line">

        <TextView
            android:id="@+id/btn_storage_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textAppearance="@style/body1_bold"
            android:textColor="@color/MainGreen400"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>