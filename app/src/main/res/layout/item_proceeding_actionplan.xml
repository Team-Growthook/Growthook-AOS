<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_proceeding_actionplan_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_proceeding_actionplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_scrap_unselected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/body3_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="북극성 지표를 적용해야 한다"
            app:layout_constraintBottom_toBottomOf="@id/iv_proceeding_actionplan"
            app:layout_constraintStart_toEndOf="@id/iv_proceeding_actionplan"
            app:layout_constraintTop_toTopOf="@id/iv_proceeding_actionplan" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_proceeding_actionplan">

            <TextView
                android:id="@+id/tv_proceeding_actionplan_btn_left"
                style="@style/detail1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/rect_radius_5"
                android:backgroundTint="@color/Gray500"
                android:paddingHorizontal="63dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:text="씨앗보기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_proceeding_actionplan_btn_right"
                style="@style/detail1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/rect_radius_5"
                android:backgroundTint="@color/MainGreen400"
                android:paddingHorizontal="63dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:text="완료하기"
                app:layout_constraintBottom_toBottomOf="@id/tv_proceeding_actionplan_btn_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="@id/tv_proceeding_actionplan_btn_left" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_proceeding_actionplan"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="18dp"
        app:dividerColor="@color/Gray400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_proceeding_actionplan_main" />

</androidx.constraintlayout.widget.ConstraintLayout>
