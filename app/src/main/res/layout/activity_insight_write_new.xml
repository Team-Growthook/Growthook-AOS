<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.insight.noactionplan.NoActionplanInsightActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_insight_write_new_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_insight_write_new_toolbar_title"
            style="@style/body1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="씨앗 정보"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_insight_write_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_insight_write_new_toolbar">

        <TextView
            android:id="@+id/tv_insight_write_new_chip"
            style="@style/detail1_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rect_radius_4"
            android:backgroundTint="@color/Green100"
            android:paddingHorizontal="7dp"
            android:paddingVertical="2dp"
            android:text="괵괵"
            android:textColor="@color/Green600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_insight_write_new_seed"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_scrap_unselected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_insight_write_new_title"
            style="@style/body2_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="야식에 불닭과 만두의 조합 좋다"
            android:textColor="@color/White000"
            app:layout_constraintStart_toStartOf="@id/tv_insight_write_new_chip"
            app:layout_constraintTop_toBottomOf="@id/tv_insight_write_new_chip" />

        <TextView
            android:id="@+id/tv_insight_write_new_date"
            style="@style/detail2_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2023.11.08"
            android:textColor="@color/Gray200"
            app:layout_constraintStart_toStartOf="@id/tv_insight_write_new_title"
            app:layout_constraintTop_toBottomOf="@id/tv_insight_write_new_title" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_insight_write_new_first"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            app:dividerColor="@color/Gray300"
            app:layout_constraintBottom_toBottomOf="@id/tv_insight_write_new_date"
            app:layout_constraintStart_toEndOf="@+id/tv_insight_write_new_date"
            app:layout_constraintTop_toTopOf="@+id/tv_insight_write_new_date" />

        <TextView
            android:id="@+id/tv_insight_write_new_dday"
            style="@style/detail2_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="D-21"
            android:textColor="@color/Red200"
            app:layout_constraintBottom_toBottomOf="@id/divider_insight_write_new_first"
            app:layout_constraintStart_toEndOf="@id/divider_insight_write_new_first"
            app:layout_constraintTop_toTopOf="@id/divider_insight_write_new_first" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_insight_write_new_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="12dp"
            app:dividerColor="@color/Gray400"
            app:layout_constraintStart_toStartOf="@id/tv_insight_write_new_chip"
            app:layout_constraintTop_toBottomOf="@id/divider_insight_write_new_first" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_insight_write_new_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_insight_write_new_second">

            <TextView
                android:id="@+id/tv_insight_write_new_content"
                style="@style/body3_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="앱잼 합숙 기간 새벽에 먹으면 더욱 효과적으로 행복할 수 있다."
                android:textColor="@color/White000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_insight_write_new_content_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_radius_5"
                android:backgroundTint="@color/Gray500"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_insight_write_new_content">

                <TextView
                    android:id="@+id/tv_insight_write_new_content_chip_title"
                    style="@style/detail2_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쑥쑥이 블로그"
                    android:textColor="@color/Gray200"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_insight_write_new_third"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="10dp"
                    app:dividerColor="@color/Gray300"
                    app:layout_constraintBottom_toBottomOf="@id/tv_insight_write_new_content_chip_title"
                    app:layout_constraintStart_toEndOf="@id/tv_insight_write_new_content_chip_title"
                    app:layout_constraintTop_toTopOf="@id/tv_insight_write_new_content_chip_title" />

                <TextView
                    android:id="@+id/tv_insight_write_new_url"
                    style="@style/detail2_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="https://www.ssookssook.com"
                    android:textColor="@color/Gray200"
                    app:layout_constraintBottom_toBottomOf="@id/tv_insight_write_new_content_chip_title"
                    app:layout_constraintStart_toEndOf="@id/divider_insight_write_new_third"
                    app:layout_constraintTop_toTopOf="@id/tv_insight_write_new_content_chip_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_insight_write_new_actionplan"
        style="@style/body1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rect_green400_fill_5"
        android:text="@string/btn_insight_write_new_text"
        android:textColor="@color/White000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>