<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Gray400"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    tools:context=".presentation.insight.noactionplan.see.InsightMenuBottomsheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_insight_menu_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingVertical="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_insight_menu_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_move"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_insight_menu_move"
            style="@style/body1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="이동하기"
            android:textColor="@color/White000"
            app:layout_constraintBottom_toBottomOf="@id/iv_insight_menu_move"
            app:layout_constraintStart_toEndOf="@id/iv_insight_menu_move"
            app:layout_constraintTop_toTopOf="@id/iv_insight_menu_move" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_insight_menu_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingVertical="19dp"
        app:layout_constraintStart_toStartOf="@id/cl_insight_menu_move"
        app:layout_constraintTop_toBottomOf="@id/cl_insight_menu_move">

        <ImageView
            android:id="@+id/iv_insight_menu_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_modify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_insight_menu_modify"
            style="@style/body1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="수정하기"
            android:textColor="@color/White000"
            app:layout_constraintBottom_toBottomOf="@id/iv_insight_menu_modify"
            app:layout_constraintStart_toEndOf="@id/iv_insight_menu_modify"
            app:layout_constraintTop_toTopOf="@id/iv_insight_menu_modify" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_insight_menu_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingVertical="19dp"
        app:layout_constraintStart_toStartOf="@id/cl_insight_menu_modify"
        app:layout_constraintTop_toBottomOf="@id/cl_insight_menu_modify">

        <ImageView
            android:id="@+id/iv_insight_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_insight_menu_delete"
            style="@style/body1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="삭제하기"
            android:textColor="@color/Red200"
            app:layout_constraintBottom_toBottomOf="@id/iv_insight_menu_delete"
            app:layout_constraintStart_toEndOf="@id/iv_insight_menu_delete"
            app:layout_constraintTop_toTopOf="@id/iv_insight_menu_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>