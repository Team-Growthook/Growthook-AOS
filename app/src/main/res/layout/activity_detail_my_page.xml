<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_my_page_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="8dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            style="@style/body1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="내 정보 조회" />


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="79dp"
        android:layout_height="82dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/circle_fill_gray900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_my_page_detail" />


    <ImageView
        android:id="@+id/iv_detail_my_page_user"
        android:layout_width="52dp"
        android:layout_height="81dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/img_bear"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_my_page_detail" />

    <TextView
        style="@style/head4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/MainGreen400"
        app:layout_constraintBottom_toTopOf="@id/tl_detail_my_page_nickname"
        app:layout_constraintStart_toStartOf="@id/tl_detail_my_page_nickname" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_detail_my_page_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="67dp"
        app:boxBackgroundColor="@color/Gray700"
        app:boxBackgroundMode="filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_my_page_user">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="false"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingTop="26dp"
            android:paddingBottom="6dp"
            android:paddingStart="0dp"
            android:textAppearance="@style/body3_bold"
            android:textColor="@color/White000"
            tools:text="eongoej" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/head4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연결된 계정"
        android:textColor="@color/MainGreen400"
        app:layout_constraintBottom_toTopOf="@id/tl_detail_my_page_email"
        app:layout_constraintStart_toStartOf="@id/tl_detail_my_page_email" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_detail_my_page_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="73dp"
        app:boxBackgroundColor="@color/Gray700"
        app:boxBackgroundMode="filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_detail_my_page_nickname">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="26dp"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="false"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingStart="0dp"
            android:textAppearance="@style/body3_bold"
            android:textColor="@color/White000"
            tools:text="enii12517@naver.com" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>