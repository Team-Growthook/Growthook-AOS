<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rect_gray900_fill_6">

    <ImageButton
        android:id="@+id/btn_home_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@null"
        android:paddingVertical="13dp"
        android:paddingStart="14dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_insight_yes_action_no_scap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_insight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textAppearance="@style/body2_bold"
        android:textColor="@color/Gray200"
        app:layout_constraintBottom_toTopOf="@id/tv_home_insight_lock"
        app:layout_constraintStart_toEndOf="@id/btn_home_scrap"
        app:layout_constraintTop_toTopOf="@id/btn_home_scrap"
        tools:text="쑥쑥이들은 최고다" />

    <TextView
        android:id="@+id/tv_home_insight_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textAppearance="@style/detail3_reg"
        android:textColor="@color/Gray200"
        app:layout_constraintBottom_toBottomOf="@id/btn_home_scrap"
        app:layout_constraintStart_toEndOf="@id/btn_home_scrap"
        app:layout_constraintTop_toBottomOf="@id/tv_home_insight_title"
        tools:text="00일 후 잠금" />


</androidx.constraintlayout.widget.ConstraintLayout>