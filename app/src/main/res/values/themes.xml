<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GrowthookAOS" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/MainGreen400</item>
        <item name="colorPrimaryVariant">@color/Gray900</item>
        <item name="colorPrimaryDark">@color/Gray900</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/Gray700</item>
        <item name="extendedFloatingActionButtonStyle">@style/InsightPlusFloatingActionButtonStyle</item>
    </style>

    <style name="Theme.GrowthookAOS" parent="Base.Theme.GrowthookAOS" />

    <style name="InsightPlusFloatingActionButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/Radius50</item>
    </style>

    <style name="Radius50" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="Radius5">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="endIconDrawable">@drawable/ic_textinput_cancel</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">@color/sel_textinput</item>
        <item name="endIconTint">@color/Gray100</item>
        <item name="iconGravity">top</item>
        <item name="textOutlineColor">@color/White000</item>
        <item name="counterTextColor">@color/Gray300</item>
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
        <item name="hintTextColor">@color/Gray300</item>
    </style>



    <style name="CounterTextAppearance">
        <item name="android:textAppearance">@style/detail1_reg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/Gray300</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="WritingBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/WritingBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="WritingBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/Gray600</item>
    </style>


</resources>